@model PictureAddModel
@{
    ViewData["Title"] = "AddPicture";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form asp-action="AddPicture" asp-controller="Picture" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <h4 class="text-center">GÜncelle</h4>
    @* @Html.HiddenFor(i => i.ProductId, htmlAttributes: new { @Value = ViewBag.Productid })*@
    <input type="hidden" name="ProductId" value="ViewBag.ProductId" id="ProductId" for="ProductId"  />
    <div class="form-group">
        <label asp-for="@Model.PictureLink">Fotoğraf Linki</label>
        <span asp-validation-for="@Model.PictureLink" class="text-danger"></span>
        <input asp-for="@Model.PictureLink" class="form-control" />
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <a asp-action="Products" asp-controller="Admin" class="btn btn-warning btn-sm">Geri dön</a>
    <button type="submit" class=" btn btn-info btn-sm">Resmi kaydet</button>
</form>



