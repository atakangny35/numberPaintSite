
@model LoginDto
@{
    ViewData["Title"] = "Login";
}

<form asp-action="Login" asp-controller="Auth" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <h4 class="text-center">Giriş Yap</h4>
    <div class="form-group">
        <label asp-for="@Model.UserName">Adınız :</label>
        <span asp-validation-for="@Model.UserName" class="text-danger"></span>
        <input asp-for="@Model.UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password">Soyadınız :</label>
        <span asp-validation-for="@Model.Password" class="text-danger"></span>
        <input asp-for="@Model.Password" class="form-control" type="password" />
    </div>
    

    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <a asp-action="Index" asp-controller="Home" class="btn btn-warning btn-sm">Geri dön</a>
    <button type="submit" class=" btn btn-info btn-sm">Giriş Yap</button>


</form>

