@model ProductAddModel
@{
    ViewData["Title"] = "NewItem";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<form asp-action="NewItem" asp-controller="Product" method="post" class="mt-4 w-75 mx-auto p-3 shadow">
    <h4 class="text-center">Yeni Ürün</h4>
    <div class="form-group">
        <label asp-for="@Model.Name">Ürün adı</label>
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
        <input asp-for="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Price">Price</label>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
        <input asp-for="@Model.Price" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.PictureUrl">İmage</label>
        <span asp-validation-for="@Model.PictureUrl" class="text-danger"></span>
        <input asp-for="@Model.PictureUrl" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label asp-for="@Model.Sizeid">Boyut</label>
        <span asp-validation-for="@Model.Sizeid" class="text-danger"></span>
        <select asp-for="@Model.Sizeid" asp-items="(List<SelectListItem>)ViewBag.DropdownList2" class="form-control">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CategoryId">Kategoriler</label>
        <span asp-validation-for="CategoryId" class="text-warning"></span>
        <select asp-for="CategoryId" asp-items="(List<SelectListItem>)ViewBag.DropdownList" class="form-control">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
   

    

    <div class="form-check mt-2">
        <label asp-for="@Model.Istok">Stokta mı?</label>
        <span asp-validation-for="@Model.Istok" class="text-danger"></span>
        <input asp-for="@Model.Istok" class="form-check-input" type="checkbox" />
    </div>


    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>

    <a asp-action="Products" asp-controller="Admin" class="btn btn-warning btn-sm">Geri dön</a>
    <button type="submit" class=" btn btn-info btn-sm">Ürünü kaydet</button>


</form>